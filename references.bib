	urldate = {2023-01-16},
	journal = {Field Crops Research},
	author = {Hashimoto, Naoyuki and Saito, Yuki and Yamamoto, Shuhei and Ishibashi, Taro and Ito, Ruito and Maki, Masayasu and Homma, Koki},
