	journal = {Agricultural and Forest Meteorology},
	author = {Huang, Jianxi and Gómez-Dans, Jose L. and Huang, Hai and Ma, Hongyuan and Wu, Qingling and Lewis, Philip E. and Liang, Shunlin and Chen, Zhongxin and Xue, Jing-Hao and Wu, Yantong and Zhao, Feng and Wang, Jing and Xie, Xianhong},
	month = oct,
	year = {2019},
	keywords = {Crop growth models, Crop modelling, Crop monitoring, Crop yield prediction, Data assimilation, Remote sensing},
