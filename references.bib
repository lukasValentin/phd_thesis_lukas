	journal = {ISPRS Journal of Photogrammetry and Remote Sensing},
	author = {Estévez, José and Vicent, Jorge and Rivera-Caicedo, Juan Pablo and Morcillo-Pallarés, Pablo and Vuolo, Francesco and Sabater, Neus and Camps-Valls, Gustau and Moreno, José and Verrelst, Jochem},
