	journal = {Remote Sensing of Environment},
	author = {Zhou, Jie and Jia, Li and Menenti, Massimo and Gorte, Ben},
	month = dec,
	year = {2016},
	pages = {367--384},
}

@article{zhou_reconstruction_2015,
	title = {Reconstruction of global {MODIS} {NDVI} time series: {Performance} of {Harmonic} {ANalysis} of {Time} {Series} ({HANTS})},
