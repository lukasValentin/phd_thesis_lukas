	journal = {IEEE Journal of Selected Topics in Applied Earth Observations and Remote Sensing},
	author = {Dong, Yingying and Wang, Jihua and Li, Cunjun and Yang, Guijun and Wang, Qian and Liu, Feng and Zhao, Jinling and Wang, Huifang and Huang, Wenjiang},
	month = feb,
