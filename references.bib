	number = {4},
	urldate = {2021-08-16},
	journal = {IEEE Geoscience and Remote Sensing Letters},
	author = {Lazaro-Gredilla, Miguel and Titsias, Michalis K. and Verrelst, Jochem and Camps-Valls, Gustavo},
	month = apr,
