@article{blackburn_towards_1999,
	title = {Towards the {Remote} {Sensing} of {Matorral} {Vegetation} {Physiology}: {Relationships} between {Spectral} {Reflectance}, {Pigment}, and {Biophysical} {Characteristics} of {Semiarid} {Bushland} {Canopies}},
