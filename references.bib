@article{duarte_qphenometrics_2018,
	title = {{QPhenoMetrics}: {An} open source software application to assess vegetation phenology metrics},
	volume = {148},
	issn = {0168-1699},
	shorttitle = {{QPhenoMetrics}},
	url = {https://www.sciencedirect.com/science/article/pii/S0168169916302162},
