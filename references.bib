	journal = {European Journal of Agronomy},
	author = {Chen, Yi and Zhang, Zhao and Tao, Fulu},
	month = nov,
	year = {2018},
	keywords = {Data assimilation, Leaf area index (LAI), MCWLA-Wheat model, Spatial differences, Winter wheat, Yield estimation},
