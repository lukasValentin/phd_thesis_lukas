@article{kamenova_evaluation_2021,
	title = {Evaluation of {Sentinel}-2 vegetation indices for prediction of {LAI}, {fAPAR} and {fCover} of winter wheat in {Bulgaria}},
	volume = {54},
	issn = {2279-7254},
	url = {https://www.tandfonline.com/doi/full/10.1080/22797254.2020.1839359},
