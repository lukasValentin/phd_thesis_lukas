	author = {Weiss, M. and Jacob, F. and Duveiller, G.},
	month = jan,
	year = {2020},
	keywords = {Agriculture, Assimilation, Crop, Deep learning, Ecosystem services, Inversion, Land cover, Land use, Machine learning, Phenotyping, Precision farming, Radiative transfer model, Remote sensing, Review, Traits, Yield},
