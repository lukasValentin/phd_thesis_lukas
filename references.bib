	urldate = {2023-03-08},
	booktitle = {Progress in {Botany} {Vol}. 82},
	publisher = {Springer International Publishing},
	author = {Körner, Christian},
	editor = {Cánovas, Francisco M. and Lüttge, Ulrich and Risueño, María-Carmen and Pretzsch, Hans},
	year = {2021},
	doi = {10.1007/124_2020_41},
	keywords = {CO2, Drought, Elevation, Growth, Hydraulics, Limitation, Low temperature, Meristems, Nutrients, Photosynthesis, Productivity, Stomata, Water potential, Xylem},
	pages = {1--41},
}

