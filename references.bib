	journal = {Remote Sensing of Environment},
	author = {Marshall, Michael and Tu, Kevin and Brown, Jesslyn},
	month = nov,
	year = {2018},
	keywords = {Biomass, Earth observation, Evapotranspiration, NPP, WUE},
	pages = {258--271},
}

