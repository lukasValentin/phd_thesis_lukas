	note = {\_eprint: https://onlinelibrary.wiley.com/doi/pdf/10.1111/j.1469-8137.2010.03536.x},
	keywords = {National Ecological Observatory Network (NEON), functional convergence, hyperspectral infrared imager, near infrared, plant traits, remote sensing, spectral reflectance},
