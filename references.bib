}

@article{danner_fitted_2019,
	title = {Fitted {PROSAIL} {Parameterization} of {Leaf} {Inclinations}, {Water} {Content} and {Brown} {Pigment} {Content} for {Winter} {Wheat} and {Maize} {Canopies}},
	volume = {11},
